<UserControl x:Class="TreeNote.Elements.NoteEditer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <TextBox x:Name="textTitle" DockPanel.Dock="Top" GotFocus="textTitle_GotFocus"></TextBox>
        <TextBox x:Name="textBody" TextWrapping="WrapWithOverflow" AcceptsReturn="True" AcceptsTab="True" GotFocus="txtBody_GotFocus"></TextBox>
    </DockPanel>
</UserControl>
